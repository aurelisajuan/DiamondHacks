        "@types/webextension-polyfill": "^0.10.1",
        "@vitejs/plugin-react": "^4.0.3",
        "autoprefixer": "^10.4.14",
        "concurrently": "^8.2.0",
        "esno": "^0.16.3",
        "fs-extra": "^11.1.1",
        "postcss": "^8.4.25",
        "prettier": "^3.0.0",
