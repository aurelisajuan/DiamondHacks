{
    "name": "SecWay",
    "longName": "Secure Way",
    "description": "Your AI Ally for Privacy You Understand",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "format": "prettier --write \"./src/**/*.ts\" \"./src/**/*.tsx\"",
        "start": "concurrently \"npm run dev\" \"npm run build\"",
        "tailwind": "tailwindcss -i src/styles/index.css -o dist/assets/index.css",
        "dev": "vite",
        "build": "tsc && vite build && npm run build:contentScript",
        "build:pre": "esno scripts/prebuild.ts",
        "build:post": "esno scripts/postbuild.ts",
        "build:contentScript": "vite build --config vite.config.contentScript.ts",
        "preview": "vite preview"
    },
